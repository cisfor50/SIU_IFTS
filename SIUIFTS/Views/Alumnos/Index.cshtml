@model IEnumerable<SIUIFTS.Models.Alumno>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de alumnos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Alta de nuevo Alumno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DNI
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                Fecha de inscripción
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlumnoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeInscripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlumnoID" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AlumnoID" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.AlumnoID"class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
